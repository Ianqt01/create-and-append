
list0 = int(input("How many do you want to add the list: "))
list_array = []

for data in range(list0):
    list1 = int(input("what numbers do you want to add the list : "))
    list_array.append(list1)
    print ("Your list are :",list_array)


decision = input("Do you want to clear the list (yes/no : ")

if decision == "yes":
    list_array.clear()
    print ("List cleared")
else:
 print ("List unchanged")
 print ("Current list:",list_array)